# =============================================================================
# NUTRIBOT - LLM-Powered Nutritionist Assistant
# Environment Configuration Example
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/nutribot
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nutribot
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_SSL=false

# =============================================================================
# OPENAI LLM CONFIGURATION
# =============================================================================
# LLM Configuration (OpenAI or Local)
# Choose between OpenAI and Local LLM
USE_LOCAL_LLM=true

# OpenAI Configuration (if USE_LOCAL_LLM=false)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Local LLM Configuration (if USE_LOCAL_LLM=true)
OLLAMA_BASE_URL=http://localhost:11434
LOCAL_MODEL=mistral:7b
MAX_TOKENS=1024
TEMPERATURE=0.7

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption keys (generate secure random keys)
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=AES-256-GCM

# Session configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# =============================================================================
# PRIVACY & COMPLIANCE SETTINGS
# =============================================================================
# Data retention periods (in days)
DATA_RETENTION_DAYS=730
CONSENT_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=1825

# Anonymization settings
ANONYMIZATION_ENABLED=true
PSEUDONYMIZATION_ENABLED=true
DATA_MINIMIZATION_ENABLED=true

# Privacy compliance
GDPR_COMPLIANCE_ENABLED=true
LOPDGDD_COMPLIANCE_ENABLED=true
AEPD_NOTIFICATION_ENABLED=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_PORT=3001
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:3001

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# REDIS CONFIGURATION (for caching and rate limiting)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@nutribot.com

# =============================================================================
# SMS CONFIGURATION (Twilio for MFA)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/nutribot.log
AUDIT_LOG_FILE_PATH=./logs/audit.log

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Privacy-compliant analytics (no personal data)
ANALYTICS_ENABLED=true
ANALYTICS_ANONYMOUS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Health data validation services
HEALTH_API_ENABLED=false
HEALTH_API_KEY=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
CORS_ORIGIN=http://localhost:3000
ENABLE_SWAGGER=true

# =============================================================================
# PRODUCTION SETTINGS (override in production)
# =============================================================================
# Force HTTPS in production
FORCE_HTTPS=false

# Database connection pooling
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# LEGAL COMPLIANCE
# =============================================================================
# Data Protection Officer contact
DPO_EMAIL=dpo@nutribot.com
DPO_PHONE=+34 900 123 456

# Spanish regulatory bodies
AEPD_CONTACT=datos@aepd.es
AESIA_CONTACT=info@aesia.es

# Company information
COMPANY_NAME=NutriBot S.L.
COMPANY_ADDRESS=Calle Example 123, 28001 Madrid, Spain
COMPANY_TAX_ID=B12345678
